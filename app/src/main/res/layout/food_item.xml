<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/iv_makanan"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@drawable/ayam_bakar" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tv_makanan"
        style="@style/styleMakananTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:textSize="24sp"
        app:layout_constraintStart_toEndOf="@+id/iv_makanan"
        app:layout_constraintTop_toTopOf="@+id/iv_makanan"
        tools:text="Sate Ayam" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tv_harga"
        style="@style/styleMakananSubtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:textSize="19sp"
        app:layout_constraintStart_toEndOf="@+id/iv_makanan"
        app:layout_constraintTop_toBottomOf="@+id/tv_makanan"
        tools:text="Rp. 40.000" />

</androidx.constraintlayout.widget.ConstraintLayout>

